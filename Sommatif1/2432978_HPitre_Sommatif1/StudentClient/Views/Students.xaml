<Window x:Class="StudentClient.Views.Students"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentClient.Views"
        xmlns:model="clr-namespace:StudentClient.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=model:StudentList}"
        Title="Students" Height="772" Width="1271"
        WindowStartupLocation="CenterScreen"
        Background="#FFF2F4F7">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barre de recherche -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="16"
             BorderBrush="#FFE3E7EE" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icône loupe (simple) -->
                <TextBlock Grid.Column="0" Text="🔎" FontSize="18" VerticalAlignment="Center"/>

                <TextBox Grid.Column="2"
                      Height="42"
                      VerticalContentAlignment="Center"
                      FontSize="16"
                      Padding="10,0"
                      BorderThickness="0"
                      Background="#FFF6F8FB"
                      Text="{Binding Recherche, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Rechercher un étudiant...">
                    <TextBox.Resources>
                        <!-- Placeholder -->
                        <Style TargetType="{x:Type TextBox}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Foreground" Value="#FF8B97A8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===================== LEFT: Liste Étudiants ===================== -->
            <Border Grid.Column="0"
                 Background="White"
                 CornerRadius="12"
                 BorderBrush="#FFE3E7EE"
                 BorderThickness="1"
                 Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FFF8FAFD" Padding="18,14" CornerRadius="12,12,0,0"
                         BorderBrush="#FFE3E7EE" BorderThickness="0,0,0,1">
                        <TextBlock Text="Liste étudiant" FontSize="22" FontWeight="SemiBold" Foreground="#FF1F2A37"/>
                    </Border>


                    <DataGrid Grid.Row="1"
                           ItemsSource="{Binding Students}"
                           SelectedItem="{Binding StudentSelectionne}"
                           AutoGenerateColumns="False"
                           CanUserAddRows="False"
                           IsReadOnly="True"
                           HeadersVisibility="Column"
                           GridLinesVisibility="Horizontal"
                           RowHeaderWidth="0"
                           BorderThickness="0"
                           Background="White"
                           ColumnHeaderHeight="44"
                           RowHeight="44"
                           FontSize="14"
                           Margin="0">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF51606F"/>
                                <Setter Property="Background" Value="#FFF4F7FB"/>
                                <Setter Property="BorderBrush" Value="#FFE3E7EE"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="BorderBrush" Value="#FFEFF3F7"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding StudentID}" Width="90"/>
                            <DataGridTextColumn Header="Nom Prénom" Binding="{Binding FullName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- ===================== RIGHT: Détail Étudiant + Cours ===================== -->
            <Border Grid.Column="2"
                 Background="White"
                 CornerRadius="12"
                 BorderBrush="#FFE3E7EE"
                 BorderThickness="1"
                 Padding="0">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Titre -->
                        <RowDefinition Height="Auto"/>
                        <!-- Formulaire -->
                        <RowDefinition Height="Auto"/>
                        <!-- Bouton Mettre à jour -->
                        <RowDefinition Height="16"/>
                        <!-- Espace -->
                        <RowDefinition Height="*"/>
                        <!-- Liste cours -->
                        <RowDefinition Height="Auto"/>
                        <!-- Bouton Inscrire -->
                    </Grid.RowDefinitions>

                    <Border Background="#FFF8FAFD" Padding="18,14" CornerRadius="12,12,0,0"
                         BorderBrush="#FFE3E7EE" BorderThickness="0,0,0,1">
                        <TextBlock Text="Détail étudiant" FontSize="22" FontWeight="SemiBold" Foreground="#FF1F2A37"/>
                    </Border>

                    <!-- Formulaire -->
                    <Grid Grid.Row="1" Margin="18,16,18,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Id:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Height="38" Padding="10,0"
                              VerticalContentAlignment="Center"
                              Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                              Text="{Binding StudentSelectionne.StudentID}" IsReadOnly="True"/>

                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Genre:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="4" Height="38" Padding="10,0"
                               VerticalContentAlignment="Center"
                               Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                               ItemsSource="{Binding Genders}"
                               SelectedItem="{Binding StudentSelectionne}"/>

                        <!-- Row 2 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Nom:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Height="38" Padding="10,0"
                              VerticalContentAlignment="Center"
                              Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                              Text="{Binding StudentSelectionne, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="2" Grid.Column="3" Text="Phone:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="4" Height="38" Padding="10,0"
                              VerticalContentAlignment="Center"
                              Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                              Text="{Binding StudentSelectionne.Phone, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Row 4 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Prénom:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Height="38" Padding="10,0"
                              VerticalContentAlignment="Center"
                              Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                              Text="{Binding StudentSelectionne, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="4" Grid.Column="3" Text="Email:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="4" Height="38" Padding="10,0"
                              VerticalContentAlignment="Center"
                              Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                              Text="{Binding StudentSelectionne.Email, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Row 6 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Naissance:" Foreground="#FF51606F" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="6" Grid.Column="1" Height="38"
                                 Background="#FFF6F8FB" BorderBrush="#FFE3E7EE" BorderThickness="1"
                                 SelectedDate="{Binding StudentSelectionne.BirthDate}"/>
                    </Grid>

                    <!--PUT-->
                    <Grid Grid.Row="2" Margin="18,12,18,0">
                        <Button Height="46"
                             HorizontalAlignment="Right"
                             Padding="18,0"
                             Background="#FF0F7B6C"
                             Foreground="White"
                             BorderBrush="#FF0F7B6C"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Command="{Binding UpdateStudentCommand}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="💾" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="Mettre à jour"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Liste des cours -->
                    <Border Grid.Row="4" Margin="18,0,18,0" CornerRadius="10"
                         BorderBrush="#FFE3E7EE" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#FFF4F7FB" Padding="12,10"
                                 BorderBrush="#FFE3E7EE" BorderThickness="0,0,0,1">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="Liste des cours" FontSize="18" FontWeight="SemiBold"
                                            Foreground="#FF1F2A37" DockPanel.Dock="Left"/>
                                    <TextBlock Text="⋯" FontSize="18" Foreground="#FF7A8797"
                                            DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>

                            <ListView Grid.Row="1"
                                   ItemsSource="{Binding SelectedStudent.Courses}"
                                   BorderThickness="0"
                                   Background="White"
                                   Margin="0"
                                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                                   d:ItemsSource="{d:SampleData ItemCount=5}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Height" Value="44"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="BorderBrush" Value="#FFEFF3F7"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="34"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="44"/>
                                                <ColumnDefinition Width="44"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox Grid.Column="0" VerticalAlignment="Center"
                                                   IsChecked="{Binding IsSelected}"/>

                                            <TextBlock Grid.Column="1"
                                                    Text="{Binding Name}"
                                                    VerticalAlignment="Center"
                                                    Foreground="#FF1F2A37"
                                                    TextTrimming="CharacterEllipsis"/>

                                            <Button Grid.Column="2"
                                                 Width="36" Height="32"
                                                 Background="Transparent"
                                                 BorderBrush="Transparent"
                                                 ToolTip="Modifier"
                                                 Command="{Binding DataContext.EditCourseCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                 CommandParameter="{Binding}">
                                                <TextBlock Text="✏" FontSize="16" Foreground="#FF1E6BD6"
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>

                                            <Button Grid.Column="3"
                                                 Width="36" Height="32"
                                                 Background="Transparent"
                                                 BorderBrush="Transparent"
                                                 ToolTip="Supprimer"
                                                 Command="{Binding DataContext.DeleteCourseCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                 CommandParameter="{Binding}">
                                                <TextBlock Text="🗑" FontSize="16" Foreground="#FF1E6BD6"
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <!-- Bouton Inscrire  -->
                    <Grid Grid.Row="5" Margin="18,14,18,18">
                        <Button Height="46"
                             HorizontalAlignment="Center"
                             Padding="18,0"
                             Background="#FF1E6BD6"
                             Foreground="White"
                             BorderBrush="#FF1E6BD6"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Command="{Binding AddCourseCommand}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="＋" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="Inscrire à ce cours"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
