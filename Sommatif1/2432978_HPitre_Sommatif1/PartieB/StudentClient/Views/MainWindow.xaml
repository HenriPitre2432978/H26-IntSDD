<Window x:Class="StudentClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email:" />
            <TextBox x:Name="txtEmail" Margin="0,5" />
            <TextBlock Text="Password:" />
            <PasswordBox x:Name="txtPassword" Margin="0,5" />
            <Button Content="Login" Click="Login_Click" Margin="0,15" />
            
            <!--Bouton conceptuel ajouté par practicité; celui-ci ne figurerait évidemment pas dans un projet hors-scolaire. 
            Le Login est fonctionnel également et enregistre le token de connexion dans LoginResponse visible dans MainWindow.xaml.cs tant que la session du programme est lancée. Celui-ci s'efface à la fin du programme-->
            <Button Content="Bypass" Click="Bypass_Click" Margin="300, 0" />
            
            <TextBlock x:Name="lblStatus" Foreground="Red" Margin="0,5" />
        </StackPanel>
    </Grid>
    
</Window>
